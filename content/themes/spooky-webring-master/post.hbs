{{!< default}}

<main class="content" role="main">

    <article class="{{post_class}}">

        {{#post}}

        <h1 class="post-title">{{{title}}}</h1>

        <section class="post-content">
            {{content}}
        </section>

        <footer class="post-footer">
          posted <span class="post-meta"><time datetime="{{date format="YYYY-MM-DD"}}">{{date format='DD MMM YYYY'}}</time> {{#if tags}}on {{tags separator=" | "}}{{/if}}</span>
        </footer>

        {{/post}}

    </article>

</main>